---
import Footer from "../components/core/Footer.astro";
import Head from "../components/core/Head.astro";
import Header from "../components/core/Header.astro";
import globalConfig from "../lib/config";

interface Props {
	internal?: boolean;
	title?: string;
}

let internal = Astro.props.internal ?? false;
if(Astro.props.internal === undefined || Astro.props.internal === null){
	if("internal" in Astro.props){
		internal = true; // allow syntax of <Layout internal />
	}
}
const title = Astro.props.title || globalConfig.brand;
---

<!-- v1.0.0 freeze, you can edit this in themes -->
<!doctype html>
<html lang="en">
	<head>
		<Head internal={internal} title={title} />
	</head>
	<body>
		<Header internal={internal} />
		<slot />
		<Footer internal={internal} />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
